<section class="container flex flex--column">
    <div class="row">
        <%= render partial: "shared/single_user", locals: { user: @user } %>
    </div>

    <div class="row flex flex--column">
        <% @posts.each do |post| %>
            <div class='row'>
               <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to post.title, user_post_path(post.author_id, post.id) %></h5>
                        <p class="card-text"><%= post.text %></p>
                    </div>
                    <div class="card-body">
                        <% post.recent_comments.each do |comment| %>
                            <p><%= comment.author.name %>: <%= comment.text %></p>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</section>