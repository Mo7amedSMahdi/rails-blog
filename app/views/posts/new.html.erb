<section class="container">
  <div class="card">
    <div class="card-header">
      <h2>New Post</h2>
    </div>
    <div class="card-body">
      <%= form_with model: @post, url: user_posts_path, method: :post, local: true, class: "flex flex--column" do |form| %>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :text %>
          <%= form.text_area :text, class: 'form-control', size: "70x10" %>
        </div>
        <div class="form-group">
          <%= form.submit 'Create', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</section>