<div class="container flex flex--column">
    <div class="row">
        <%= render partial: "shared/single_user", locals: { user: @user } %>
    </div>
    <div class='row'>
        <div class="col">
            <p>
                <%= @user.bio %>
            </p>
        </div>
    </div>


    <div class="row flex flex--column">
        <% @user.recent_posts.each do |post| %>
            <div class"row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= link_to post.title, user_post_path(user_id:@user.id,id:post.id) %>
                            </h5>
                            <p class="card-text">
                                <%= post.text %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
    </div>

    <div class="row">
        <%= link_to "See all posts", user_posts_path(@user.id), class: "btn btn-primary btn--center" %>
    </div>

</div>